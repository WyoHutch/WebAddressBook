<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th colspan="2" bgcolor="yellow">Name</th>
      <th></th>
      <th colspan="3" bgcolor="cyan">Address</th>
    </tr>
    <tr style="background: #bbb">
      <th>Last</th>
      <th>First</th>
      <th></th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th></th>
      <th>Phone#</th>
      <th>Email</th>
      <th colspan="3" style="background: #fff"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.last_name %></td>
        <td><%= contact.first_name %></td>
        <td></td>
        <td><%= contact.city %></td>
        <td><%= contact.state %></td>
        <td><%= contact.zip_code %></td>
        <td></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Delete', contact, :method => :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

